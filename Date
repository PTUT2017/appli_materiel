<body>
	<div id="calendrier"></div>
	<div id="tab"></div>
</body>
<script type="text/javascript">

	//initialisation date du jour
	var today = new Date(); 
	var day = today.getDate();
	var month = today.getMonth()+1;
	var year = today.getFullYear();
	var full = day+"/"+month+"/"+year; // format dd/mm/yyyy
	document.getElementById("calendrier").innerHTML = full+"<br>";

	// 100 jours Mettre en tableau 
	var array = new Array();
	for (var i=1; i<= 100; i++){

		nextd = today.setDate(today.getDate() +1);  
		day = today.getDate();
		month = today.getMonth()+1;
		year = today.getFullYear();
		full = day+"/"+month+"/"+year;
		document.getElementById("tab").innerHTML += full+"<br>";

	}
	

</script>
